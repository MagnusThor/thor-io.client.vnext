{
  "compilerOptions": {
    "target": "ES2016",
    "lib": [
      "DOM",
      "ES2016"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": false,
    "rootDirs": [
      "src"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}