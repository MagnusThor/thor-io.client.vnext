{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "DOM",
      "ES2016"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": false,
    "rootDirs": [
      "src"
    ],
    "outDir": "dist/"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
  ]
}